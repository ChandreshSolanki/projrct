  });
 });

   $('.like_comment').click(function(form){
     var id = (this.id);
     $.ajax({
       type: 'POST',
       url: '/posts/add_likecomment',
       data: {p_id: id}
     }).done(function(data,status){
     if(status=="success"){
      }
  });
 });
 
 

</script>
