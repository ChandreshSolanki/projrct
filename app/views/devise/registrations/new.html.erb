<h2>Sign up</h2>
<div style="background-color: #B2DAE8; width:25%; ">

<%= nested_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <div><%= f.label :first_name %><br />
  <%= f.text_field :first_name %></div>
  
  <div><%= f.label :last_name %><br />
  <%= f.text_field :last_name %></div>

  <div><%= f.label :email %><br />
  <%= f.email_field :email, :autofocus => true %></div>

  <div><%= f.label :password %><br />
  <%= f.password_field :password %></div>

  <div><%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation %></div>
  
  <div><%= f.label :date_of_birth %><br />
  <%= f.date_select :date_of_birth %></div>
  
  <div><%= f.label :gender %><br />
  <%= f.select :gender, options_for_select([["Male", "m"], ["Female", "f"]]) %>
  
  <div><%= f.label :contact %><br />
  <%= f.text_field :contact %></div>
  
  <div><%= f.label :home_town %><br />
  <%= f.text_field :home_town %></div>
  
  <div><%= f.label :state %><br />
  <%= f.text_field :state %></div>
  
  <div><%= f.label :country %><br />
  <%= f.text_field :country %></div>
  
  <div><%= f.label :relationship_status %><br />
  <%= f.select :relationship_status, options_for_select([["Single", "s"], ["Married", "m"]]) %>

  <div><%= f.label :interest_in %><br />
  <%= f.select :interest_in, options_for_select([["Male", "m"], ["Female", "f"]]) %>
  
  <div><%= f.label :language %><br />
   <%= f.select :language, options_for_select([["English", "e"], ["Hindi", "h"]]) %>
  
  <div><%= f.label :religion %><br />
  <%= f.text_field :religion %></div>
  
  <div>
  <% resource.pictures.build %>
  <%= f.fields_for :pictures do |pic| %>
    <%= pic.file_field :image %>
  <% end %>
  </div>
  
  <div><%= f.submit "Sign up" %></div>
<% end %>

<%= render "devise/shared/links" %>
</div>
